<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="6dp"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Gambar Artikel -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgArtikel"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:contentDescription="Thumbnail Artikel"
            android:background="#E0E0E0"
            app:shapeAppearanceOverlay="@style/RoundedImage" />

        <!-- Judul Artikel -->
        <TextView
            android:id="@+id/txtJudul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:text="Judul Artikel"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1B5E20"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Deskripsi -->
        <TextView
            android:id="@+id/txtDeskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:text="Deskripsi ringkas isi artikel yang informatif."
            android:textSize="14sp"
            android:textColor="#424242"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Tombol Edit & Hapus -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="end">

            <TextView
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textColor="#2196F3"
                android:textStyle="bold"
                android:background="@drawable/bg_btn_edit"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/btnHapus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hapus"
                android:textColor="#F44336"
                android:textStyle="bold"
                android:background="@drawable/bg_btn_delete"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

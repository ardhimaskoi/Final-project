<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="6dp"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Gambar dengan overlay tanggal -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="430dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgEvent"
                android:layout_width="match_parent"
                android:layout_height="430dp"
                android:scaleType="centerCrop"
                android:contentDescription="Thumbnail Event"
                android:background="#E0E0E0"
                app:shapeAppearanceOverlay="@style/RoundedImage" />

            <TextView
                android:id="@+id/txtTanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_margin="12dp"
                android:background="@drawable/background_rounded"
                android:textColor="#FFFFFF"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="10 Mei 2025"
                android:textSize="12sp"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- Konten -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/txtJudul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Judul Video"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/txtDeskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi singkat dari video atau konten dakwah."
                android:textSize="14sp"
                android:textColor="#424242"
                android:paddingTop="4dp"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Tombol Aksi -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:gravity="end">

                <TextView
                    android:id="@+id/btnEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:textColor="#2196F3"
                    android:textStyle="bold"
                    android:background="@drawable/bg_btn_edit"
                    android:layout_marginRight="8dp"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/btnHapus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hapus"
                    android:textColor="#F44336"
                    android:textStyle="bold"
                    android:background="@drawable/bg_btn_delete"
                    android:padding="8dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

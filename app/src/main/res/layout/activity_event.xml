<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F4F3"
    android:padding="24dp"
    android:fillViewport="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Hero Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ•Œ Tambah Event Islami"
            android:textSize="24sp"
            android:textColor="#1B5E20"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â€œFastabiqul khairatâ€ â€“ Berlomba-lomba dalam kebaikan"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginBottom="24dp"
            android:fontFamily="cursive" />

        <!-- Input Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/edittext_background"
            android:padding="20dp"

            android:layout_marginBottom="24dp">

            <EditText
                android:id="@+id/inputJudul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ðŸ“Œ Judul Event"
                android:textColor="#000000"
                android:textColorHint="#AAAAAA"
                android:background="@android:color/transparent"
                android:textSize="16sp"
                android:paddingVertical="10dp"
                android:fontFamily="sans-serif" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/inputDeskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ðŸ“ Deskripsi"
                android:gravity="top"
                android:lines="4"
                android:textColor="#000000"
                android:textColorHint="#AAAAAA"
                android:background="@android:color/transparent"
                android:paddingVertical="10dp"
                android:fontFamily="sans-serif" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/inputTanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ðŸ“… Tanggal"
                android:focusable="false"
                android:clickable="true"
                android:textColor="#000000"
                android:textColorHint="#AAAAAA"
                android:background="@android:color/transparent"
                android:paddingVertical="10dp"
                android:fontFamily="sans-serif" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp" />

            <!-- Tombol untuk memilih gambar dari HP -->
            <Button
                android:id="@+id/btnPilihGambar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ–¼ï¸ Pilih Gambar dari HP"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#4CAF50"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-medium" />

            <!-- Preview gambar yang dipilih -->
            <ImageView
                android:id="@+id/imagePreview"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="24dp"
                android:background="#DDDDDD" />

        </LinearLayout>

        <!-- Tombol Simpan -->
        <Button
            android:id="@+id/btnSimpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’¾ Simpan Event"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1A3D31"
            android:padding="18dp"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>
</ScrollView>